   "source": [
    "#Intention: Make an isosceles triangle\n",
    "#If every line, multiple the elements by 2\n",
    "\n",
    "def iso_triangle(size):\n",
    "    for n in range(size):\n",
    "        asterisks = \"*\"*(n)*2\n",
    "        space = \" \"*(size-n)\n",
    "        print(space+asterisks)"
   ]
  },
